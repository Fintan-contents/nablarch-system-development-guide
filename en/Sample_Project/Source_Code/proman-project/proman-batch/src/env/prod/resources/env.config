# Resource name when acquiring DataSource using JNDI
nablarch.connectionFactory.jndiResourceName=

# JDBC connection driver class (item for direct use of DataSource)
#(TODO Change depending on the database used in the full-scale operation environment)
nablarch.db.jdbcDriver=org.h2.Driver

# JDBC connection URL (item for direct use of DataSource)
# (TODO: Change to the connection destination for the full-scale operation environment. The connection URL for H2 is determined by the location of the data file and the user name. This needs to be understood before changing this.)
nablarch.db.url=jdbc:h2:./h2/db/SAMPLE

# User name for database connection (item for direct use of DataSource)
# (TODO: Change to the user name for the full-scale operation environment)
nablarch.db.user=SAMPLE

# Password for database connection (item for direct use of DataSource)
# (TODO: Change to the password for the full-scale operation environment)
nablarch.db.password=SAMPLE

# Maximum pool size (item for direct use of DataSource)
nablarch.db.maxPoolSize=10

# Initial pool size (item for direct use of DataSource)
nablarch.db.initialPoolSize=2

# Initial load setting of code
# To prevent unnecessary resources from being acquired, initial loading is not performed.
nablarch.codeCache.loadOnStartUp=false

# Directory for storing format definition files
# TODO: Change to project file path
nablarch.filePathSetting.basePathSettings.format=file:/var/nablarch/format

# Output directory for output files
# TODO: Change to project file path
nablarch.filePathSetting.basePathSettings.output=file:/var/nablarch/output

# Directory for storing batch input files
# TODO: Change to project file path
nablarch.filePathSetting.basePathSettings.input=file:/var/nablarch/input

# SMTP server name
nablarch.mailSessionConfig.mailSmtpHost=smtp.xxx.yyy.zzz

# SMTP port
nablarch.mailSessionConfig.mailSmtpPort=587

# Connection host name
nablarch.mailSessionConfig.mailHost=smtp.xxx.yyy.zzz
