  <resource-ref>
    <description>Nablarch Connection</description>
    <res-ref-name>jdbc/sampleOracleDS</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  -->
</web-app>
