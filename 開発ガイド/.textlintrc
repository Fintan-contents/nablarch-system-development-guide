{
  "rules": {
    "preset-ja-technical-writing": {
      "max-kanji-continuous-len": {
        "max": 7
      },
      "sentence-length": {
        "max": 200
      }
    },
    "prh": {
      "rulePaths": ["prh.yml"]
    },
    "no-mix-dearu-desumasu": {
      "preferInHeader": "である", // "である" or "ですます"
      "preferInBody": "ですます",// "である" or "ですます"
      "preferInList": "である",    // "である" or "ですます"
      // 文末以外でも、敬体(ですます調)と常体(である調)を厳しくチェックするかどうか
      "strict": false
    }
  }
}
